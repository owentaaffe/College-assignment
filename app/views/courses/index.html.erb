<p id="notice"><%= notice %></p>

<h1 align="center">Listing Courses</h1>

<div>
  <p><strong>
    Please take my Survey
  </strong></p>
    [ <%= link_to 'Take Survey', new_survey_path %> ]
</div><br>
 <% @courses.each do |course| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><strong>Title:</strong> <%= course.title %></h3>
  </div>
  <div class="panel-body"><strong>Description: </strong>
    <%= course.description %>
  </div>
  <div class="panel-footer">
    <%= link_to "register here", new_register_path, class: 'btn btn-primary btn-lg' %>
    <%= link_to 'Show', course %> |
    <%= link_to 'Edit', edit_course_path(course) %> |
    <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
<% end %>

<%= link_to 'New Course', new_course_path, class: 'btn btn-primary btn-lg' %>

