<p id="notice"><%= notice %></p>
<h1 align="center"> Showing Course</h1>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@course, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-offset-2  col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of course", autofocus: true %><br>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-offset-2 col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of course" %><br>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-10">
        <%= link_to 'Register Here', register_path %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
