<p id="notice"><%= notice %></p>

<h1 align="center">Taken Surveys answers</h1>

<table>
  <thead>
    <tr>
      <th>How</th>
      <th>Would</th>
      <th>Much</th>
      <th>Change</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.how %></td>
        <td><%= survey.would %></td>
        <td><%= survey.much %></td>
        <td><%= survey.change %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Take Survey', new_survey_path %>
