<p id="notice"><%= notice %></p>

<h1 align="center">Taken Surveys answers</h1>

<% @surveys.each do |survey| %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">How easy is it to navigate this website? : <%= survey.how %></h3>
  </div>
  <div class="panel-heading">
    <h3 class="panel-title"><strong>Would you tell your friends about this website? : </strong><%= survey.would %></h3>
  </div>
  <div class="panel-heading">
    <h3 class="panel-title"><strong>How much out of ten would you give this site? : </strong><%= survey.much %></h3>
  </div>
  <div class="panel-heading">
    <h3 class="panel-title"><strong>Is there any change that you would make? : </strong><%= survey.change %></h3>
  </div>

  <div class="panel-footer">

    <%= link_to 'Show', survey %> |
    <%= link_to 'Edit', edit_survey_path(survey) %> |
    <%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
<% end %>



<br>

