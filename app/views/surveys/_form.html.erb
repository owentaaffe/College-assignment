<%= form_for(@survey) do |f| %>
  <% if @survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
      <% @survey.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@survey, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :how %>
          <strong>easy is it to navigate this website?</strong>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :how, class: "form-control", placeholder: "Place full name here", autofocus: true %>
      </div>
    </div><br><br><br>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :would %>
          <strong>you tell your friends about this website?</strong>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :would, rows: 10, class: "form-control", placeholder: "" %>
      </div>
    </div><br><br><br>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <strong>How</strong>
        <%= f.label :much %>
        <strong>out of ten would you give this site?</strong>
      </div>
      <div class="col-sm-8">
        <%= f.number_field :much, class: "form-control", placeholder: "" %>
      </div>
    </div><br><br><br>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <strong>Is there a</strong>
        <%= f.label :change %>
        <strong>that you would make?</strong>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :change, rows: 10, class: "form-control", placeholder: "" %>
      </div>
    </div><br><br><br>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-10">
        <%= f.submit "Submit your answers", class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
<% end %>








